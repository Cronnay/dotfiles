{
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "markdown",
    "javascript",
    "typescript",
    "json",
    "jsonc"
  ],
  "languageserver": {
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml", ".git/"]
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"],
      "ignoredRootPaths": ["~/"]
    }
  }
}
